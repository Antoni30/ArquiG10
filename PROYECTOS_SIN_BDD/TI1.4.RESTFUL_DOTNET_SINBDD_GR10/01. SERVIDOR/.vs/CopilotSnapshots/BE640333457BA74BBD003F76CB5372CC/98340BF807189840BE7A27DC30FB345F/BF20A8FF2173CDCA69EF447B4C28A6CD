using System;
using System.Collections.Generic;
using System.Net.Http;
using System.Text;
using System.Text.Json;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Controls;

namespace UnitConverterDesktop
{
    public partial class ConverterWindow : Window
    {
        private readonly Dictionary<string, string> operaciones = new()
        {
            { "Centímetros a Metros", "centimetros-a-metros" },
            { "Metros a Centímetros", "metros-a-centimetros" },
            { "Metros a Kilómetros", "metros-a-kilometros" },
            { "Toneladas a Libras", "tonelada-a-libra" },
            { "Kilogramos a Libras", "kilogramo-a-libra" },
            { "Gramos a Kilogramos", "gramo-a-kilogramo" },
            { "Celsius a Fahrenheit", "celsius-a-fahrenheit" },
            { "Fahrenheit a Celsius", "fahrenheit-a-celsius" },
            { "Celsius a Kelvin", "celsius-a-kelvin" }
        };

        public ConverterWindow()
        {
            InitializeComponent();
            InitializeUi();
        }

        private void InitializeUi()
        {
            // Populate categories and operations. Keep ComboBox items as strings only.
            cmbOperaciones.Items.Clear();
            cmbOperaciones.Items.Add("— SELECCIONE UNA OPERACIÓN —");
            // default show longitud
            rbLongitud.IsChecked = true;
            LoadOperationsForCategory("Longitud");
            cmbOperaciones.SelectedIndex = 0;
            btnConvertir.IsEnabled = false;
            txtResultado.Text = "Resultado aparecerá aquí...";
        }

        private void LoadOperationsForCategory(string category)
        {
            // Remove all items except the placeholder at index 0
            while (cmbOperaciones.Items.Count > 1)
                cmbOperaciones.Items.RemoveAt(1);

            if (category == "Longitud")
            {
                cmbOperaciones.Items.Add("Centímetros a Metros");
                cmbOperaciones.Items.Add("Metros a Centímetros");
                cmbOperaciones.Items.Add("Metros a Kilómetros");
            }
            else if (category == "Masa")
            {
                cmbOperaciones.Items.Add("Toneladas a Libras");
                cmbOperaciones.Items.Add("Kilogramos a Libras");
                cmbOperaciones.Items.Add("Gramos a Kilogramos");
            }
            else if (category == "Temperatura")
            {
                cmbOperaciones.Items.Add("Celsius a Fahrenheit");
                cmbOperaciones.Items.Add("Fahrenheit a Celsius");
                cmbOperaciones.Items.Add("Celsius a Kelvin");
            }

            cmbOperaciones.SelectedIndex = 0;
        }

        private void Category_Checked(object sender, RoutedEventArgs e)
        {
            if (sender is RadioButton rb && rb.IsChecked == true)
            {
                LoadOperationsForCategory(rb.Content?.ToString() ?? string.Empty);
                btnConvertir.IsEnabled = false;
                txtResultado.Text = "Resultado aparecerá aquí...";
            }
        }

        private void CmbOperaciones_SelectionChanged(object sender, SelectionChangedEventArgs e)
        {
            btnConvertir.IsEnabled = cmbOperaciones.SelectedIndex > 0;
        }

        private async void BtnConvertir_Click(object sender, RoutedEventArgs e)
        {
            if (cmbOperaciones.SelectedIndex <= 0)
            {
                MessageBox.Show("Seleccione una operación.", "Error", MessageBoxButton.OK, MessageBoxImage.Warning);
                return;
            }

            if (!double.TryParse(txtValor.Text, out double valor))
            {
                MessageBox.Show("Ingrese un valor numérico válido.", "Error", MessageBoxButton.OK, MessageBoxImage.Warning);
                return;
            }

            string operacion = cmbOperaciones.SelectedItem?.ToString() ?? string.Empty;
            if (!operaciones.TryGetValue(operacion, out string endpoint))
            {
                MessageBox.Show("Operación no reconocida.", "Error", MessageBoxButton.OK, MessageBoxImage.Error);
                return;
            }

            btnConvertir.IsEnabled = false;
            var originalContent = btnConvertir.Content;
            btnConvertir.Content = "Convirtiendo...";

            try
            {
                var resultado = await PostAsync<double>(endpoint, valor);
                var partes = operacion.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                string origen = partes.Length > 0 ? partes[0] : "origen";
                string destino = partes.Length > 1 ? partes[^1] : "destino";
                txtResultado.Text = $"{valor} {origen} = {resultado:0.######} {destino}";
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Error: {ex.Message}", "Error", MessageBoxButton.OK, MessageBoxImage.Error);
                txtResultado.Text = "Error en la conversión";
            }
            finally
            {
                btnConvertir.IsEnabled = true;
                btnConvertir.Content = originalContent;
            }
        }

        private async Task<T> PostAsync<T>(string endpoint, double value)
        {
            var json = JsonSerializer.Serialize(value);
            var content = new StringContent(json, Encoding.UTF8, "application/json");

            HttpResponseMessage response;
            try
            {
                response = await App.HttpClient.PostAsync(endpoint, content);
            }
            catch (Exception ex)
            {
                throw new Exception("No se pudo conectar con la API. " + ex.Message);
            }

            var responseContent = await response.Content.ReadAsStringAsync();
            if (!response.IsSuccessStatusCode)
                throw new Exception($"HTTP {(int)response.StatusCode}: {response.ReasonPhrase}. Contenido: {responseContent}");

            ApiResponse<T>? apiResp;
            try
            {
                apiResp = JsonSerializer.Deserialize<ApiResponse<T>>(responseContent, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
            }
            catch (JsonException)
            {
                throw new Exception("Respuesta inválida del servidor: " + responseContent);
            }

            if (apiResp is null)
                throw new Exception("Respuesta nula del servidor.");

            if (!apiResp.Success)
                throw new Exception("Error del servidor: " + apiResp.Message);

            return apiResp.Data;
        }
    }

    public class ApiResponse<T>
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public T Data { get; set; }
        public DateTime Timestamp { get; set; }
    }
}